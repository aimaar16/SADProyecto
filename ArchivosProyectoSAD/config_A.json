{
  "preprocessing": {
    "missing_values": {
      "impute": true,
      "impute_method_numeric": "mean",
      "impute_method_categorical": "mode"
    },
    "categorical_to_numeric": true,
    "categorical_columns": ["Genre","Positive or Negative"],
    "target": ["Positive or Negative"],
    "scaling": {
      "enabled": true,
      "method": "maxscale",
      "columns": ["Rating"]
    },
    "text_processing": {
            "tfidf_min_frequency": 0
    },
    "sampling": {
      "method": "oversample",
      "target_column": "Positive or Negative"
    },
    "correct_column_types": {
      "enabled": true
    },
    "outliers": {
      "handle": "round",
      "columns": []
    }
  },
  "dataset":"AirBNBReviews.csv",
  "model":"best_naive_bayes_model.pkl",
  "mode": "train",
  "algorithm": "random_forest",
  "test_size": 0.2,
  "dev_size": 0.2,
  "metrics": ["accuracy", "precision", "recall", "fscore"],
  "best_metric": "fscore",
  "average":"macro",
  "knn": {
    "k_min": 2,
    "k_max": 6,
    "p_values":[1,2],
    "weights":["uniform","distance"]
  },
  "decision_tree": {
    "max_depth": [3, 5, 10],
    "min_samples_split": [2, 5, 10],
    "min_samples_leaf": [1, 2, 4]
  },
  "random_forest": {
    "n_estimators": [10, 20, 100],
    "max_features": ["sqrt"],
    "bootstrap": [true],
    "max_depth": [6, 50],
    "min_samples_split": [2],
    "min_samples_leaf": [1, 3, 10]
  },
  "naive_bayes": {
    "type": "gaussian",
    "alpha": [0.5, 1.0],
    "binarize": [0.0],
    "var_smoothing": [1e-9],
    "use_discretization": true,
    "n_bins": 5,
    "use_mixed_nb": true
  }
}
